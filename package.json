{
  "name": "discord-hom-bot",
  "version": "1.0.0",
  "description": "Discord bot for the Heroes of Mirren",
  "scripts": {
    "start": "nodemon -x 'node src/index.js || touch src/index.js' --ignore db.json"
  },
  "engines": {
    "node": ">=16"
  },
  "author": "Chris Lewis",
  "dependencies": {
    "@discordjs/voice": "^0.11.0",
    "discord.js": "^14.5.0",
    "node-fetch": "^2.6.7",
    "opusscript": "^0.0.8",
    "sodium": "^3.0.2"
  },
  "devDependencies": {
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.20"
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb-base",
    "env": {
      "browser": true
    },
    "rules": {
      "no-multi-spaces": 0,
      "global-require": 0,
      "import/no-dynamic-require": 0,
      "no-await-in-loop": 0,
      "no-console": 0,
      "no-alert": 0,
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    },
    "globals": {
      "fabricate": "readonly",
      "Colors": "readonly"
    }
  }
}
